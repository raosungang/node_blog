<!Doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
            list-style: none;
            text-decoration: none;
        }

        .nav {
            overflow: hidden;
            padding: 10px 20px;
            background: #333333;
        }

        .nav li {
            float: left;
            width: 100px;
            color: #fff;
            font-size: 16px;
        }

        .nav li a {
            color: #fff;
            font-size: 16px;
        }
    </style>
</head>
<body>
<div class="nav">
    <ul>
        <li><a href="/">首页</a></li>
        <% if (user) { %>
        <li><a href="/user/<%= user._id %>"><%= user.name %></a></li>
        <li><a href="/logout">退出</li>
        <% } else { %>
        <li><a href="/login">登陆</a></li>
        <li><a href="/reg">注册</a></li>
        <% } %>
    </ul>
</div>
